<Window x:Class="First_Project.AddBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:First_Project"
        mc:Ignorable="d"
        Title="AddBooks" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10,10,10,10">
            <TextBox x:Name="txtName" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="200" TextChanged="Name_TextChanged"/>
            <TextBox x:Name="txtAuteur" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Auteur" VerticalAlignment="Top" Width="200" TextChanged="Auteur_TextChanged"/>
            <Button x:Name="Save" Content="Save" Width="200" Margin="10,10,10,10" Click="Save_Click"/>
            <Button x:Name="Exit" Content="Exit" Width="200" Margin="10,10,10,10" Click="Exit_Click"/>

        </StackPanel>


    </Grid>
</Window>
